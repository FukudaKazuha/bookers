<!--index投稿一覧画面、new投稿画面、/books-->

<h1>Books</h1>
<% @books.each do |book| %>

<!--titleとbody書く-->
  
  
  <!--index、投稿一覧表示-->
   <span>
    <%= link_to "show",book_path(book) %>
  </span>
  
   <span>
    <%= link_to "edit",edit_book_path(book) %>
  </span>
  
   <span>
    <%= link_to "destroy" %>
    <!--viewページ、遷移なし。削除機能だけ。-->
  </span>
  
 <% end %> 

<%= form_with model: @book do |f| %>
<h1>New Book</h1>

<h4>title</h4>
<%= f.text_field:title %>

<h4>body</h4>
<%= f.text_area:body %>

<%= f.submit 'Create Book' %>

<% end %>
  <!--form_with投稿フォームnew-->

  <!--投稿した後は投稿詳細画面（show）に飛ぶ-->
  

